<%- include('../partials/header') %>

<h2 class="content">MyTrails Community Parks</h2>
<p class="content">Click on a park to view its trails.</p>
<% if (user) { %>
    <p class="content">Add a new park <a href="/parks/new">here</a>.</p>
<% } %>


<table class="content">
    <thead>
        <tr>
            <th>Park</th>
            <th>Entrance Fee</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
        </tr>
    </thead>
    <tbody>
        <% parks.forEach(function(p) { %>
            <tr>
                <td><a href="/parks/<%= p._id %>"><%= p.name %></a></td>
                <td>$<%= p.entranceFee %></td>
                <td><%= p.streetAddress %></td>
                <td><%= p.city %></td>
                <td><%= p.state %></td>
                <td><%= p.zip %></td>
        </tr>
        <% }); %>
    </tbody>
</table>

<%- include('../partials/footer') %>